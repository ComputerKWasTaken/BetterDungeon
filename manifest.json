{
  "manifest_version": 3,
  "name": "BetterDungeon",
  "version": "1.0.0",
  "description": "An all-in-one browser extension that enhances AI Dungeon with additional QOL additions and brand new features to improve the AI Dungeon experience.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://aidungeon.com/*", "https://play.aidungeon.com/*", "https://beta.aidungeon.com/*", "https://alpha.aidungeon.com/*"],
      "js": [
        "utils/dom.js",
        "utils/storage.js",
        "services/ai-dungeon-service.js",
        "services/loading-screen.js",
        "services/story-card-scanner.js",
        "core/feature-manager.js",
        "features/markdown_feature.js",
        "features/command_feature.js",
        "features/attempt_feature.js",
        "features/readable_position_feature.js",
        "features/trigger_highlight_feature.js",
        "features/hotkey_feature.js",
        "main.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "ai_instruction.txt", "icons/icon128.png"],
      "matches": ["https://aidungeon.com/*", "https://play.aidungeon.com/*", "https://beta.aidungeon.com/*", "https://alpha.aidungeon.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BetterDungeon Settings"
  }
}
